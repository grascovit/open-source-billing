<div class="reports">
  <div class="report_header">
    <div class="report_header_content">
      <%= form_tag "/reports/data/#{@report.report_name}", :method => :get, :remote => true do %>

          <div class="report_date">
            <div class="control_name">
              <p><%= t('views.reports.date_range') %></p>
            </div>
            <input name="criteria[from_date]" type="text" id="from_date" value="<%= 1.month.ago.to_date.strftime(get_date_format) %>"/>

            <p>to</p>
            <input name="criteria[to_date]" type="text" id="to_date" value="<%= Date.today.strftime(get_date_format) %>"/>
          </div>

          <div class="report_clients">
            <div class="control_name">
              <p><%= t('views.clients.client') %></p>
            </div>
            <div class="client_select">
              <%= collection_select "criteria", "client_id", [Client.new({:id => 0, :organization_name => t('views.common.all')})] + get_report_clients, :id, :organization_name, {:prompt => t('views.common.all')}, {:class => "client chzn-select"} %>
            </div>
          </div>

          <div class="report_update">
            <%= submit_tag t('views.common.go'), :class => "report_update" %>
          </div>
      <% end %>
    </div>
  </div>
  <!-- report_header -->
</div><!--reports-->